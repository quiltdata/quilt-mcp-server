{
  "family": "quilt-mcp-jwt",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/quilt-mcp-task-role",
  "containerDefinitions": [
    {
      "name": "quilt-mcp",
      "image": "quiltdata/quilt-mcp:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "QUILT_MULTIUSER_MODE", "value": "true"},
        {"name": "MCP_JWT_SECRET_SSM_PARAMETER", "value": "/quilt/mcp/jwt-secret"},
        {"name": "QUILT_CATALOG_URL", "value": "https://your-catalog.quiltdata.com"},
        {"name": "QUILT_REGISTRY_URL", "value": "https://registry.your-catalog.quiltdata.com"},
        {"name": "AWS_REGION", "value": "us-east-1"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quilt-mcp",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "mcp"
        }
      }
    }
  ]
}
