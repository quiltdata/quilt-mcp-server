# Quilt MCP Server Configuration
# Copy this file to .env and customize as needed

# === Required Configuration ===
# Your Quilt catalog domain (default: demo catalog for testing)
QUILT_CATALOG_DOMAIN=demo.quiltdata.com

# Default S3 bucket for operations (use demo bucket for testing)
QUILT_DEFAULT_BUCKET=s3://quilt-example

# === AWS Configuration ===
# AWS profile to use (default uses your default profile)
AWS_PROFILE=default

# AWS region (optional, defaults to us-east-1)
AWS_REGION=us-east-1

# === Server Configuration ===
# Port for the MCP server (default: 8000)
MCP_SERVER_PORT=8000

# Server host (default: 127.0.0.1)
MCP_SERVER_HOST=127.0.0.1

# === Optional Advanced Settings ===
# Catalog URL (auto-constructed from domain if not specified)
# QUILT_CATALOG_URL=https://demo.quiltdata.com

# Enable debug logging (true/false)
DEBUG_MODE=false

# Disable Quilt3 session caching for testing
QUILT_DISABLE_QUILT3_SESSION=false