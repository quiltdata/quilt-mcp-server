{
  "family": "quilt-mcp-server",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::850787717197:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::850787717197:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "mcp-server",
          "image": "850787717197.dkr.ecr.us-east-1.amazonaws.com/quilt-mcp-server:permission-scheme",
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mcp-server-production",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "us-east-1"
        },
        {
          "name": "AWS_REGION", 
          "value": "us-east-1"
        },
        {
          "name": "QUILT_CATALOG_URL",
          "value": "https://demo.quiltdata.com"
        },
        {
          "name": "QUILT_REGISTRY_URL",
          "value": "https://demo.quiltdata.com"
        },
        {
          "name": "MCP_SERVER_NAME",
          "value": "quilt-mcp-server"
        },
        {
          "name": "MCP_SERVER_VERSION",
          "value": "0.6.5"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        },
        {
          "name": "FASTMCP_TRANSPORT",
          "value": "streamable-http"
        },
        {
          "name": "FASTMCP_ADDR",
          "value": "0.0.0.0"
        },
        {
          "name": "FASTMCP_PORT",
          "value": "8000"
        }
      ],
            "portMappings": [
              {
                "containerPort": 8000,
                "hostPort": 8000,
                "protocol": "tcp"
              }
            ],
      "healthCheck": {
        "command": ["CMD-SHELL", "python3 -c \"import urllib.request, urllib.error; urllib.request.urlopen('http://127.0.0.1:8000/healthz', timeout=3).read()\" || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
