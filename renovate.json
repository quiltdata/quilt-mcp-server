{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 6am on Monday"
  ],
  "timezone": "America/Los_Angeles",
  "prConcurrentLimit": 3,
  "branchConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Group ALL non-major dependency updates (Python, GitHub Actions, Docker, etc.) including security updates into a single PR",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies"
    },
    {
      "description": "Group all major dependency updates including security updates into a single PR (for careful review)",
      "matchUpdateTypes": ["major"],
      "groupName": "all major dependencies"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "assignees": []
  },
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore(deps):",
  "prFooter": "ðŸ¤– Generated with [Claude Code](https://claude.com/claude-code)"
}
